{
  "name": "react-native-sqlite",
  "version": "1.0.0",
  "description": "SQLite3 bindings for React Native (Android & iOS)",
  "main": "sqlite.js",
  "scripts": {
    "sqlite:build:init": "git submodule update --init",
    "sqlite:build:connector": "cd Android-sqlite-connector && make && cd ..",
    "sqlite:build:driver": "cd Android-sqlite-ext-native-driver && make init && make && cd ..",
    "sqlite:util:copy-driver": "unzip -o Android-sqlite-ext-native-driver/sqlite-native-driver-libs.zip -d platforms/android-native",
    "sqlite:util:copy-connector": "cp Android-sqlite-connector/sqlite-connector.jar platforms/android-native/libs",
    "sqlite:build": "yarn sqlite:build:init && yarn sqlite:build:connector && yarn sqlite:build:driver && yarn sqlite:util:copy-driver && yarn sqlite:util:copy-connector"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aschen-builder/react-native-sqlite.git"
  },
  "keywords": [
    "react-native-sqlite",
    "react-native-sqlite",
    "react-component",
    "reactnative",
    "react-native",
    "sqlite",
    "sqlite3",
    "ios",
    "android",
    "promise",
    "cordova-sqlite-storage"
  ],
  "author": "aschen-builder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aschen-builder/react-native-sqlite/issues"
  },
  "homepage": "https://github.com/aschen-builder/react-native-sqlite",
  "peerDependencies": {
    "react-native": ">=0.14.0"
  },
  "devDependencies": {
    "react": "16.13.1",
    "react-native": "^0.63.2",
    "react-native-windows": "^0.63.6"
  }
}
